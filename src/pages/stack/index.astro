---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import { stack, type TechCategory } from '@/data/stack';

const categories: TechCategory[] = [
  'languages',
  'frontend',
  'backend',
  'testing',
  'devops',
  'tools',
];
const categoryLabels: Record<TechCategory, string> = {
  languages: 'Languages',
  frontend: 'Frontend',
  backend: 'Backend',
  testing: 'Testing',
  devops: 'DevOps & Cloud',
  tools: 'Tools',
};
---

<BaseLayout title="Tech Stack | Emre" description="Tools and technologies I use - Emre Özturanlı">
  <div class="container">
    <header class="page-header">
      <h1>Tech Stack</h1>
      <p class="page-description">The tools and technologies I use to build digital products.</p>
    </header>

    <div class="stack-grid">
      {
        categories.map((category) => {
          const items = stack.filter((item) => item.category === category);
          if (items.length === 0) return null;

          return (
            <section class="stack-category">
              <h2 class="category-title">{categoryLabels[category]}</h2>
              <ul class="category-list">
                {items.map((item) => (
                  <li class="stack-item">
                    <div class="icon-box">
                      <Icon name={item.icon} class="icon" />
                    </div>
                    <span class="name">{item.name}</span>
                  </li>
                ))}
              </ul>
            </section>
          );
        })
      }
    </div>
  </div>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: var(--space-2xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-xs);
  }

  .page-description {
    color: var(--color-text-secondary);
  }

  .stack-grid {
    display: grid;
    gap: var(--space-2xl);
  }

  .category-title {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-xs);
    border-bottom: 1px solid var(--color-border);
  }

  .category-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: var(--space-md);
  }

  .stack-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: var(--space-sm);
    padding: var(--space-md);
    border-radius: var(--radius-md);
    background: var(--color-bg-secondary);
    transition: all var(--transition-normal);
    border: 1px solid transparent;
  }

  .stack-item:hover {
    transform: translateY(-2px);
    background: var(--color-bg);
    border-color: var(--color-border);
    box-shadow: var(--shadow-md);
  }

  .icon-box {
    font-size: 2.5rem;
    color: var(--color-text);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform var(--transition-normal);
  }

  .stack-item:hover .icon-box {
    transform: scale(1.1);
    color: var(--color-accent);
  }

  .name {
    font-size: var(--font-size-sm);
    font-weight: 500;
  }
</style>
